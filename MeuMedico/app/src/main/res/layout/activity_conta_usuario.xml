<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.ufc.dc.es.meumedico.view.ContaUsuarioActivity">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Editar Conta"
        android:id="@+id/btEditarConta"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:textColor="#000000"
        android:background="#25dd8b"
        android:onClick="editarContaUsuario"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Excluir Conta"
        android:id="@+id/btExcluirConta"
        android:textColor="#000000"
        android:background="#25dd8b"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btEditarConta"
        android:layout_alignParentStart="true"
        android:onClick="deletarContaUsuarioByEmail"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logado como: "
        android:id="@+id/textViewLogadoLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="56dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/textViewEmailLabel"
        android:layout_below="@+id/textViewLogadoLabel"
        android:layout_alignStart="@+id/textViewLogadoLabel"
        android:layout_marginTop="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxxx"
        android:id="@+id/textViewLogado"
        android:layout_alignTop="@+id/textViewLogadoLabel"
        android:layout_toEndOf="@+id/textViewLogadoLabel"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xxxxx@xxxx.xxx"
        android:id="@+id/textViewEmail"
        android:layout_alignTop="@+id/textViewEmailLabel"
        android:layout_toEndOf="@+id/textViewEmailLabel"
        android:layout_marginStart="10dp" />

</RelativeLayout>
