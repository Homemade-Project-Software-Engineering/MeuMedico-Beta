<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/wihteBackground"
    tools:context="br.ufc.dc.es.meumedico.view.ContaUsuarioActivity">


    <br.ufc.dc.es.meumedico.controller.custom_widgets.MyMainTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conta_usuario_logado_label"
        android:id="@+id/textViewLogadoLabel"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="56dp"
        android:textColor="@color/nightBlack"/>

    <br.ufc.dc.es.meumedico.controller.custom_widgets.MyMainTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conta_usuario_logado_nome"
        android:id="@+id/textViewLogadoContaUsuario"
        android:layout_alignTop="@+id/textViewLogadoLabel"
        android:layout_toEndOf="@+id/textViewLogadoLabel"
        android:layout_marginStart="10dp"
        android:textColor="@color/nightBlack"/>

    <br.ufc.dc.es.meumedico.controller.custom_widgets.MyMainTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conta_usuario_email_label"
        android:id="@+id/textViewEmailLabel"
        android:layout_below="@+id/textViewLogadoLabel"
        android:layout_alignStart="@+id/textViewLogadoLabel"
        android:layout_marginTop="13dp"
        android:textColor="@color/nightBlack"/>

    <br.ufc.dc.es.meumedico.controller.custom_widgets.MyMainTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/conta_usuario_email"
        android:id="@+id/textViewEmailContaUsuario"
        android:layout_alignTop="@+id/textViewEmailLabel"
        android:layout_toEndOf="@+id/textViewEmailLabel"
        android:layout_marginStart="10dp"
        android:textColor="@color/nightBlack"/>

    <br.ufc.dc.es.meumedico.controller.custom_widgets.MyMainTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/conta_usuario_id_label"
        android:id="@+id/textViewSeuID"
        android:layout_marginTop="24dp"
        android:textColor="@color/nightBlack"
        android:layout_below="@+id/textViewEmailLabel"
        android:layout_alignStart="@+id/textViewEmailLabel" />

    <br.ufc.dc.es.meumedico.controller.custom_widgets.MyMainTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/conta_usuario_id"
        android:id="@+id/textViewIdPerfil"
        android:textColor="@color/nightBlack"
        android:layout_marginStart="130dp"
        android:layout_alignBottom="@+id/textViewSeuID" />

    <br.ufc.dc.es.meumedico.controller.custom_widgets.MyCustomButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/conta_usuario_btEditarConta"
        android:id="@+id/btEditarConta"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:textColor="@color/whitTextButton"
        android:background="@color/emeraldGreen"
        android:onClick="editarContaUsuario"/>

    <br.ufc.dc.es.meumedico.controller.custom_widgets.MyCustomButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/conta_usuario_btExcluirConta"
        android:id="@+id/btExcluirConta"
        android:textColor="@color/whitTextButton"
        android:background="@color/emeraldGreen"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/btEditarConta"
        android:layout_alignParentStart="true"
        android:onClick="deletarContaUsuarioByEmail"/>

</RelativeLayout>
