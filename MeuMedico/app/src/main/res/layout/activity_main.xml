<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/wihteBackground"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.MainActivity">

    <br.ufc.dc.es.meumedico.controller.others.MyMainTextView
        android:id="@+id/MainTitle"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="@color/shadowGray"
        android:shadowDx="5"
        android:shadowDy="5"
        android:textSize="45sp"
        android:shadowRadius="0"
        android:textColor="@color/emeraldGreen"
        android:text="Meu Médico" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_face"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp" />

    <br.ufc.dc.es.meumedico.controller.others.MyMainTextView
        android:id="@+id/logInLabel"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/emeraldGreen"
        android:text="ou"
        android:layout_gravity="center_horizontal" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <br.ufc.dc.es.meumedico.controller.others.MyCustomEditText
            android:id="@+id/etGuestName"
            android:layout_width="match_parent"
            android:textColor="@color/nightBlack"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="@color/nightBlack" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayoutPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <br.ufc.dc.es.meumedico.controller.others.MyCustomEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordTextEdit"
        android:textColor="@color/nightBlack"
        android:inputType="textPassword"
        android:hint="Senha"
        android:textColorHint="@color/nightBlack"/>
    </android.support.design.widget.TextInputLayout>

    <br.ufc.dc.es.meumedico.controller.others.MyCustomButton
        android:layout_margin="10dp"
        android:id="@+id/btSecondScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btSecondActivity"
        android:textColor="@color/nightBlack"
        android:background="@color/emeraldGreen" />

    <br.ufc.dc.es.meumedico.controller.others.MyMainTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Não tem conta ainda?"
        android:textColor="@color/com_facebook_blue"
        android:id="@+id/textViewQuestion" />

    <br.ufc.dc.es.meumedico.controller.others.MyMainTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="CADASTRE-SE"
        android:id="@+id/textViewButton"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/com_facebook_blue"
        android:clickable="true" />

</LinearLayout>
