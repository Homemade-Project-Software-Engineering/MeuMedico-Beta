<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#FFFFFF">

    <br.ufc.dc.es.meumedico.controller.others.MyMainTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome:"
        android:textColor="#000000" />

    <br.ufc.dc.es.meumedico.controller.others.MyCustomEditText
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AtNome" />

    <br.ufc.dc.es.meumedico.controller.others.MyMainTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição:"
        android:textColor="#000000" />

    <br.ufc.dc.es.meumedico.controller.others.MyCustomEditText
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AtDescricao" />

    <br.ufc.dc.es.meumedico.controller.others.MyMainTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data:"
        android:textColor="#000000" />

    <br.ufc.dc.es.meumedico.controller.others.MyCustomEditText
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AtData"
        android:onClick="showDatePickerDialog"
        android:focusable="false"/>

    <br.ufc.dc.es.meumedico.controller.others.MyMainTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora:"
        android:textColor="#000000" />

    <br.ufc.dc.es.meumedico.controller.others.MyCustomEditText
        android:textColor="#000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AtHora"
        android:onClick="showTimePickerDialog"
        android:focusable="false"/>

    <br.ufc.dc.es.meumedico.controller.others.MyCustomButton
        android:textColor="#000000"
        android:background="#25dd8b"
        android:layout_width="300px"
        android:layout_height="100px"
        android:text="Salvar"
        android:id="@+id/AtSalvar"
        android:layout_gravity="center_horizontal" />

</LinearLayout>