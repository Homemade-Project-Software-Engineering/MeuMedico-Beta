<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".view.ContaActivity">

    <br.ufc.dc.es.meumedico.controller.others.MyMainTextView
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome"
        android:id="@+id/textViewNome"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <br.ufc.dc.es.meumedico.model.others.MyCustomEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CadastroNome"
        android:textColor="#000000"
        android:layout_below="@+id/textViewNome"
        android:layout_alignParentStart="true" />

    <br.ufc.dc.es.meumedico.controller.others.MyMainTextView
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/textViewEmail"
        android:layout_below="@+id/CadastroNome"
        android:layout_alignParentStart="true" />

    <br.ufc.dc.es.meumedico.model.others.MyCustomEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/CadastroEmail"
        android:textColor="#000000"
        android:layout_below="@+id/textViewEmail"
        android:layout_alignParentStart="true" />

    <br.ufc.dc.es.meumedico.controller.others.MyMainTextView
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Senha:"
        android:id="@+id/textViewSenha"
        android:layout_below="@+id/CadastroEmail"
        android:layout_alignParentStart="true" />

    <br.ufc.dc.es.meumedico.model.others.MyCustomEditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/CadastroSenha"
        android:layout_below="@+id/textViewSenha"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:layout_alignEnd="@+id/CadastroEmail" />

    <br.ufc.dc.es.meumedico.model.others.MyCustomButton
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Criar Conta"
        android:id="@+id/btcriarConta"
        android:layout_below="@+id/CadastroSenha"
        android:textColor="#000000"
        android:background="#25DD8B"/>

</RelativeLayout>
